{
    "containerDefinitions": [
        {
            "name": "introduction",
            "image": ${{ secrets.IMAGE_URL }},
            "cpu": 1024,
            "memory": 2048,
            "portMappings": [
                {
                    "name": "http-listener",
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ]
        }
    ],
    "family": "frontend-family",
    "executionRoleArn": ${{ secrets.EXEC_ROLE }},
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048"
}
